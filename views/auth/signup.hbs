{{!--views/auth/signup.hbs --}}
<div class="container" >
<div id="form">
  <div class="text-center mb-4">
        <img class="mb-4 mt-4" src="./images/icon1.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Signup</h1>
  </div>

    <form action="/signup" method="POST" class="form-signin ">
  <div class="form-label-group">
  
    {{!-- <label for="input-username">Username</label> --}}
    <input type="text" id="input-username" name="username" placeholder="Your username" />
  </div>
   <div class="form-label-group">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
</div>
<div class="form-label-group">
    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />
    </div>
    <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me</label>
      </div>
    <button type="submit">Create account</button>

    {{!-- error message will be added here --}}
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
    <p class="mt-5 mb-3 text-muted text-center">Â©Ironbnb 2020</p>
  </form>
</div>
</div>